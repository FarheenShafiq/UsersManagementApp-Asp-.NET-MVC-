@model IEnumerable<UsersManagementApp.Models.UsersModel>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}

@{
    ViewBag.Title = "User Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All User Records</h2>

<!-- ✅ Centered Table Wrapper -->
<div class="table-page-wrapper">

    <div class="table-responsive">
        <table class="records-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
                    <th>Department</th>
                    <th>Designation</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>

                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.DateOfBirth.ToShortDateString()</td>
                        <td>@user.Department</td>
                        <td>@user.Designation</td>
                        <td>@user.CreatedAt.ToString("g")</td>
                        <td>@(user.UpdatedAt?.ToString("g") ?? "Not updated")</td>
                        <td>
                            <a href="@Url.Action("Edit", "UsersManagement", new { id = user.Id })" class="btn btn-sm btn-info">Edit</a>

                            @Html.ActionLink("Delete", "Delete", new { id = user.Id }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Are you sure you want to delete this user?');" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

